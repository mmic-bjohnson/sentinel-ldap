{
	"name": "mmic/sentinel-ldap",
	"type": "platform-extension",
	"description": "Adds LDAP for Active Directory functionality to Cartalyst Sentinel",
	"authors": [
		{
			"name": "Medical Mutual Insurance Company of Maine",
			"email": "webmaster@medicalmutual.com"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "https://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"cartalyst/composer-installers": "1.2.*",
		"illuminate/support": "5.0.*",
		"platform/foundation": "2.0.*"
	},
	"autoload": {
		"classmap": [
			"database",
			"classes",
			"src/Controllers",
			"src/Facades",
			"src/Exceptions",
			"src/Repositories"
		],
		"psr-4": {
			"Mmic\\SentinelLdap\\": "src/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
